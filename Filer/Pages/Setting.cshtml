@page "/setting"
@model Filer.Pages.SettingModel
@{
    Layout = "_Layout";
}

@section title {
    <title>@Model.Title - Filer</title>
}

@section header {
    <script>
        var initialData = @Html.Raw(Model.Data);
    </script>
}

@section theme {
    <script>checkTheme()</script>
}

<div id="app" class="layout">

@await Html.PartialAsync("_HeaderPartial",
    new Header(HeaderMode.Theme))

    <div class="container">
        <div class="main file-main">
            <div class="main-inner">
                <div class="board fw">
                    <div class="board-title">
                        @* <i class="fa-solid fa-gear fa-fw"></i> *@
                        <span>{{local.settings}}</span>
                    </div>
                </div>
                <div class="board fw form">
                    <!-- <div class="hr"></div> -->
                    <div class="form-field-title">Version</div>
                    <div class="form-field-description">{{local.version}}：@version</div>
                </div>
                <div class="board fw form">
                    <div class="form-field first">
                        <div class="form-field-title-wrap">
                            <div class="form-field-title">Use Deep Link</div>
                            <div class="form-field-description">{{local.useDeepLinkDescription}}</div>
                        </div>
                        <div class="checkbox-wrap">
                            <div class="checkbox" v-on:click="onIsUseDeepLink">
                                <input type="checkbox" name="isUseDeepLink" value="" />
                                <div class="checkbox-mark" v-bind:class="{checked: isUseDeepLink}">
                                    <svg width="18" height="18" viewBox="0 0 18 18">
                                        <g fill="none" fill-rule="evenodd">
                                            <polyline stroke-width="2" points="3.5 9.5 7 13 15 5"></polyline>
                                        </g>
                                    </svg>
                                </div>
                                <div class="checkbox-text">{{local.enable}}</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-field last">
                        <div class="form-field-title-wrap">
                            <div class="form-field-title">Deep Link Package</div>
                            <div class="form-field-description">
                                <div>{{local.deepLinkPackageDescriptionFirst}}</div>
                                <div>{{local.deepLinkPackageDescriptionSecond}}</div>
                            </div>
                        </div>
                        <div>
                            <input type="text" v-model="deepLinkPackage" v-on:change="onDeepLinkPackage" placeholder="com.mxtech.videoplayer.ad" />
                        </div>
                    </div>
                </div>
                <div class="board fw form">
                    <div class="form-field-title">
                        <a href="license" target="_blank"># Package License</a>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("_FooterPartial")

        </div>
    </div>
</div>
<div class="toast-template">
    <div class="toast-block">
        <div class="toast-inner">__data-content__</div>
    </div>
</div>

@section script {
    <script src="js/page/setting.js?v=@version"></script>
}