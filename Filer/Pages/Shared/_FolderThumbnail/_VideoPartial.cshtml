<div class="board hover file-image-item" v-bind:class="{active: selectedPath==getItemPath(item), first: idx===0}">
    <div class="file-image-item-icon">
        <img :src="routeLink('api/thumbnail/video', item.workNum, item.path)" loading="lazy" />
    </div>
    <div class="file-image-item-text">
        <div v-if="!hasSearch" class="file-image-item-title">{{item.name}}</div>
        <div v-if="hasSearch" class="file-image-item-title" v-html="item.nameWithMark"></div>
        <div v-if="hasSearch" class="file-image-item-sub-title">
            <span class="file-image-item-sub-title-icon">
                <i class="fa-solid fa-tag fa-fw"></i>
            </span>
            <span>{{item.searchDirPath}}</span>
        </div>
        <div class="file-image-item-description">
            <span>{{item.fileSize}}</span>
        </div>
    </div>
    <div class="file-image-item-trailing">
        <span v-if="item.hasHistory" class="badge-circle badge-circle-check">
            @* <i class="fa-regular fa-circle-check"></i> *@
            @* <i class="fa-solid fa-clock-rotate-left"></i> *@
            <i class="fa-solid fa-check"></i>
        </span>
    </div>
</div>