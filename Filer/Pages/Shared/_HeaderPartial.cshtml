@model Filer.Models.Header

<div class="header">
    <div class="header-inner">
        <div class="start">
            @*<div class="nav-logo-placeholder"></div>*@
            <a href="" class="nav-logo-wrap" v-on:click="onHome">
                <div class="nav-logo cicle">
                    <div class="nav-logo-inner"></div>
                    <img src="images/logo-128x128.png" />
                </div>
                <div class="nav-title">
                    <span>Filer</span>
                </div>
            </a>
        </div>
        <div class="center">
            @if (Model.Page == "folder" || Model.Page == "workDir")
            {
                <div class="search-box-block">
                    <div class="search-box" v-bind:class="{show: isSearchOpen}">
                        <a href="javascript:void(0)" class="nav-link search-back-button" v-on:click="backSearch">
                            <i class="fa-solid fa-angle-left fa-fw"></i>
                        </a>
                        <div class="search-input-box" v-bind:class="{focus: isSearchFocus}">
                            <input v-model="searchInputText" ref="searchInput" class="search-input"
                                   name="search" type="text" :placeholder="local.search"
                                   autocomplete="off" autocorrect="off" spellcheck="false"
                                   v-on:focus="onSearchFocus(true)" v-on:blur="onSearchFocus(false)"
                                   v-on:keydown.enter="search('@Model.Page')" />
                            <a v-show="searchInputText!=''" href="javascript:void(0)" class="search-clear-button" v-on:click="clearSearch">
                                <i class="fa-solid fa-xmark fa-fw"></i>
                            </a>
                        </div>
                        <a href="javascript:void(0)" class="search-button" v-on:click="search('@Model.Page')">
                            <div class="search-button-wrap">
                                <i class="fa-solid fa-magnifying-glass fa-fw"></i>
                            </div>
                        </a>
                    </div>
                    <a href="javascript:void(0)" class="nav-link search-toggle-button" v-on:click="toggleSearch">
                        <i class="fa-solid fa-magnifying-glass fa-fw"></i>
                    </a>
                </div> 
            }
        </div>
        <div class="end">
            @if (Model.Mode == HeaderMode.Theme)
            {
                <a href="javascript:void(0)" class="nav-link-c theme-button theme-button-light" v-on:click="toggleTheme">
                    <span class="theme-button-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </span>
                    <span class="theme-button-text">light</span>
                </a>
                <a href="javascript:void(0)" class="nav-link-c theme-button theme-button-dark" v-on:click="toggleTheme">
                    <span class="theme-button-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M20.354 15.354l.928.373a1 1 0 00-1.3-1.3l.372.927zM8.646 3.646l.928.373a1 1 0 00-1.301-1.301l.373.928zm11.335 10.78c-.92.37-1.925.574-2.981.574v2a9.976 9.976 0 003.727-.718l-.746-1.856zM17 15a8 8 0 01-8-8H7c0 5.523 4.477 10 10 10v-2zM9 7c0-1.056.204-2.061.574-2.981l-1.856-.746A9.975 9.975 0 007 7h2zm-5 5a8.003 8.003 0 015.019-7.426l-.746-1.856A10.003 10.003 0 002 12h2zm8 8a8 8 0 01-8-8H2c0 5.523 4.477 10 10 10v-2zm7.426-5.019A8.003 8.003 0 0112 20.001v2c4.207 0 7.805-2.599 9.282-6.274l-1.856-.746z" fill="currentColor"></path>
                        </svg>
                    </span>
                    <span class="theme-button-text">dark</span>
                </a>
            }
            @if (Model.Mode == HeaderMode.TextTheme)
            {
                <a href="javascript:void(0)" class="nav-link-c theme-button text-theme-button" v-on:click="toggleTextTheme">
                    @* <i class="fa-regular fa-bookmark fa-fw"></i> *@
                    @* <i class="fa-solid fa-paintbrush fa-fw"></i> *@
                    <i class="fa-solid fa-brush fa-fw"></i>
                    @* <i class="fa-solid fa-droplet fa-fw"></i> *@
                    @* <i class="fa-solid fa-palette fa-fw"></i> *@
                    <span class="theme-button-text">theme</span>
                </a>
            }
            <a href="bookmark" class="nav-link bookmark-button">
                <span class="bookmark-button-icon">
                    <i class="fa-regular fa-bookmark fa-fw"></i>
                    @* <i class="fa-solid fa-bookmark fa-fw"></i> *@
                </span>
                <span class="bookmark-button-text">{{local.bookmark}}</span>
            </a>
            <a href="setting" class="nav-link setting-button">
                <span class="setting-button-icon">
                    <i class="fa-solid fa-gear fa-fw"></i>
                </span>
                <span class="setting-button-text">{{local.settings}}</span>
            </a>
        </div>
    </div>
</div>