<a v-if="item.fileType==type.folder" href="javascript:void(0)" v-on:click="onItemClick(item)">
    <div class="board hover file-item" v-bind:class="{active: selectedPath==getItemPath(item)}">
        <div class="file-item-icon">
            <i class="fa-solid fa-folder fa-3x fa-fw"></i>
        </div>
        <div class="file-item-text">
            <div class="file-item-title">{{item.name}}</div>
            <div class="file-item-description">{{item.itemCount}}</div>
        </div>
    </div>
</a>
<a v-if="item.fileType==type.video" href="javascript:void(0)" 
   v-on:click="onVideoItemClick(item)">
    <div class="board hover file-image-item" v-bind:class="{active: selectedPath==getItemPath(item)}">
        @*<div class="file-image-item-icon"
             onclick="onPreviewClick(event)"
             v-mounted="onPreviewMounted"
             :id="'video-tooltip-'+item.id"
             :data-url="item.link"
             :data-preview="item.preview"
             :data-src="'src'">
            <img :src="item.thumbnail" loading="lazy" />
        </div>*@
        <div class="file-preview-placeholder"></div>
        <div class="file-preview"
             v-bind:class="{over: item.isPreviewOver}">
            <div class="file-image-item-icon file-preview-warp"
                 v-on:click.stop="onPrevClick(item)">
                <img v-if="item.isPreviewLoading"
                     v-bind:class="{show: item.isPreviewOver&&item.isPreviewLoaded}"
                     v-bind:src="item.preview" v-on:load="onPreviewLoaded(item)" />
                <img v-bind:class="{show: !item.isPreviewOver||!item.isPreviewLoaded}"
                     v-bind:src="item.thumbnail" loading="lazy" />
            </div>
        </div>
        <div class="file-image-item-text">
            <div class="file-image-item-title">{{item.name}}</div>
            <div class="file-image-item-description">{{item.fileSize}}</div>
        </div>
    </div>
</a>
