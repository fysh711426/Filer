@page "/image/{worknum}/{*path}"
@model Filer.Pages.ImageModel
@{
    Layout = "_Layout";
}

@section title {
    <title>@Model.Title - Filer</title>
}

@section header {
    <script>
        var initialData = @Html.Raw(Model.Data);
    </script>
}

@section theme {
    <script>checkTheme()</script>
}

<div id="app" class="layout">

@await Html.PartialAsync("_HeaderPartial",
    new Header(HeaderMode.Theme))

    <div class="container">
        <div class="main image-main">
            <div class="main-inner">
                <div class="board file-navbar sticky over">
                    <div class="start mw-1x">
                        <a :href="routeLink('folder', workNum, parentDirPath)" class="file-navbar-btn left">
                            <i class="fa-solid fa-arrow-left fa-fw"></i>
                        </a>
                        @* <a :href="routeLinkWithOrderBy('folder', workNum, parentDirPath)" class="file-navbar-btn left">
                            <i class="fa-solid fa-arrow-left fa-fw"></i>
                        </a> *@
                        <div class="file-navbar-title-wrap mw-title">
                            <div class="file-navbar-title">{{imageName}}</div>
                            <div class="file-navbar-title-over-wrap">
                                <div class="file-navbar-title-over">{{imageName}}</div>
                            </div>
                        </div>
                    </div>
                    <div></div>
                    <div class="end">
                        <template>
                            <a v-if="!bookmark" href="javascript:void(0)" v-on:click="saveBookmark" class="file-navbar-btn right last">
                                <i class="fa-regular fa-star fa-fw"></i>
                            </a>
                            <a v-if="bookmark" href="javascript:void(0)" v-on:click="removeBookmark" class="file-navbar-btn right last">
                                <i class="fa-solid fa-star fa-fw"></i>
                            </a>
                        </template>
                    </div>
                </div>
                <div class="file-image-content">
                    <div class="file-image-control prev" v-bind:class="{show:showPrev}" v-on:click="onPrev">
                        <div class="file-image-control-button">
                            <i class="fa-solid fa-angle-left"></i>
                        </div>
                    </div>
                    <div class="file-image-control next" v-bind:class="{show:showNext}" v-on:click="onNext">
                        <div class="file-image-control-button">
                            <i class="fa-solid fa-angle-right"></i>
                        </div>
                    </div>
                    <div v-if="isLoaded && datas.length > 0">
                        <div v-for="item in datas">
                            <div v-show="imagePath==item.path" class="file-image-block" v-on:click="onImageToggle">
                                <img v-show="item.link!=''" :src="item.link" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("_FooterPartial")

        </div>
    </div>
</div>

@await Html.PartialAsync("_Template/_ToastPartial")

@section script {
    <script src="js/page/image.js?v=@version"></script>
}