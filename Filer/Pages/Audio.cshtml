@page "/audio/{worknum}/{*path}"
@model Filer.Pages.AudioModel
@{
    Layout = "_Layout";
}

@section title {
    <title>@Model.Title - Filer</title>
}

@section header {
    <link rel="stylesheet" href="package/videojs/7.10.2/video-js.min.css">
    <script src="package/videojs/7.10.2/video.min.js"></script>
    <script>window.HELP_IMPROVE_VIDEOJS = false;</script>
    <script>
        var initialData = @Html.Raw(Model.Data);
    </script>
}

@section theme {
    <script>checkTheme()</script>
}

<div id="app" class="layout">

@await Html.PartialAsync("_HeaderPartial",
    new Header(HeaderMode.Theme))

    <div class="container">
        <div class="main file-main">
            <div class="main-inner">
                <div class="board file-navbar sticky">
                    <div class="start mw-1x">
                        <a :href="routeLink('folder', workNum, parentDirPath)" class="file-navbar-btn left">
                            <i class="fa-solid fa-arrow-left fa-fw"></i>
                        </a>
                        @* <a :href="routeLinkWithOrderBy('folder', workNum, parentDirPath)" class="file-navbar-btn">
                            <i class="fa-solid fa-arrow-left fa-fw"></i>
                        </a> *@

                        @* <div class="file-navbar-title">{{fileName}}</div> *@
                        <div class="file-navbar-title-wrap mw-title">
                            <div class="file-navbar-title">{{fileName}}</div>
                            <div class="file-navbar-title-over-wrap">
                                <div class="file-navbar-title-over">{{fileName}}</div>
                            </div>
                        </div>
                    </div>
                    <div></div>
                    <div class="end">
                        <template>
                            <a v-if="!bookmark" href="javascript:void(0)" v-on:click="saveBookmark" class="file-navbar-btn right last">
                                <i class="fa-regular fa-star fa-fw"></i>
                            </a>
                            <a v-if="bookmark" href="javascript:void(0)" v-on:click="removeBookmark" class="file-navbar-btn right last">
                                <i class="fa-solid fa-star fa-fw"></i>
                            </a>
                        </template>
                    </div>
                </div>
                <div class="file-video-wrap">
                    <video-js id="player" class="video-js vjs-big-play-centered vjs-16-9"></video-js>
                </div>
            </div>

            @await Html.PartialAsync("_FooterPartial")

        </div>
    </div>
</div>

@await Html.PartialAsync("_Template/_ToastPartial")

@section script {
    <script src="js/page/audio.js?v=@version"></script>
}