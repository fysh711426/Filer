{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://127.0.0.1:2048"
      }
    }
  },
  "Version": "1.1.0",
  "BaseHref": "/",
  "UsePreviewCache": true,
  "UseThumbnailCache": true,
  "UseHistory": true,
  "UseWindowsNaturalSort": true,
  "UseSearchAsync": true,
  "UseVariantSearch": true,
  "SearchResultLimit": 1000,
  "Language": "en-US",
  //"Language": "zh-TW",
  "WorkDirs": [
    {
      "Name": "Shared",
      "Path": "D:\\Shared"
    }
  ]
}